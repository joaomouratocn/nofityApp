<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" maxHeight="300.0" maxWidth="300.0" minHeight="300.0" minWidth="300.0" prefHeight="300.0" prefWidth="300.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.arthivia.notifyapp.controllers.NotificationController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <ImageView fitHeight="70.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true">
        <Image url="@../images/notification.gif" />
    </ImageView>
    <Label fx:id="lbNotification" text="Notification title">
        <font>
            <Font size="25.0" />
        </font>
    </Label>
    <TextArea fx:id="taMessage" disable="true" editable="false" />
    <Button fx:id="btnConfirm" mnemonicParsing="false" text="Confirmar" />
</VBox>
